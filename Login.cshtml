@model GFAS.Models.AppLogin
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    body {
        margin-top:100px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        
        background-size: cover;
        background-position: center;
    }

    .btn {
        width: 100%;
        height: 45px;
        background: #000;
        border: none;
        outline: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1em;
        color: #fff;
        font-weight: 500;
    }
   body{
        background-image: url('@Url.Content("~/Images/img1.png")');
   }
</style>


<form asp-action="Login" asp-controller="User" method="post">

    <div class="d-flex justify-content-center ">
        @if (ViewBag.FailedMsg != null)
        {
            <div class="alert alert-danger failedMsg text-center">
                @ViewBag.FailedMsg
            </div>
        }
    </div>

    <div class="wrapper login">
        <h2>Login</h2>
        <div class="input-box">
            <span class="icon"><i class='bx bx-user'></i></span>
            <input asp-for="UserId" type="number" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="6" autocomplete="off">
            <label>Personal No.</label>
        </div>
        <div class="input-box">
            <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
            <input asp-for="Password" type="password">
            <label>Password</label>
        </div>
        <div class="remember-forgot">
          
            <a href="~/User/ForgetPassword">Forgot Password?</a>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-dark col-sm-4">LOG IN</button>
        </div>
    </div>
</form>



<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
